# Qwen Plus 的 API Key，用于调用 LLM
QWEN_API_KEY=sk-your-qwen-key
# Qwen 兼容的 Base URL，如无特殊代理保持默认
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
# Serper (Google Search API)，用于自定义联网检索
SERPER_API_KEY=serper-api-key
SERPER_LOCATION=us
SERPER_LANGUAGE=en

# 支持标签成立所需的支持度阈值（0-1）
SUPPORT_THRESHOLD=0.55
# 驳斥标签成立所需的反驳度阈值（0-1）
REFUTE_THRESHOLD=0.55
# 计算覆盖提升时分母，越大越慢提升
COVERAGE_DIVISOR=6
# 置信度公式中来自主导证据的权重
CONFIDENCE_BASE_WEIGHT=0.7

# 前端同时并发核验的 claim 数量，默认 2
NEXT_PUBLIC_VERIFICATION_CONCURRENCY=2
