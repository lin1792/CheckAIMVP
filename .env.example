# DeepSeek 的 API Key，用于调用 LLM
DEEPSEEK_API_KEY=sk-your-deepseek-key
# DeepSeek 兼容的 Base URL，如无特殊代理保持默认
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Google Programmable Search JSON API 的密钥
GOOGLE_API_KEY=your-google-programmable-search-key
# Google Programmable Search 引擎 ID（cx）
GOOGLE_CSE_ID=your-cx-id

# Brave Search API Token，作为 Google 失效时的备选
BRAVE_API_KEY=your-brave-search-key

# HuggingFace Inference API Token，用于优先调用 NLI 模型
HF_API_KEY=your-huggingface-token
# HuggingFace 上的 NLI 模型名称
HF_NLI_MODEL=roberta-large-mnli

# 支持标签成立所需的支持度阈值（0-1）
SUPPORT_THRESHOLD=0.55
# 驳斥标签成立所需的反驳度阈值（0-1）
REFUTE_THRESHOLD=0.55
# 计算覆盖提升时分母，越大越慢提升
COVERAGE_DIVISOR=6
# 置信度公式中来自主导证据的权重
CONFIDENCE_BASE_WEIGHT=0.7
